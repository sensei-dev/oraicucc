#6. feladat

def iras(mondat) : 

    if mondat[-1] == "." : 
        return "A mondat kijelentő"
    if mondat[-1] == "!" : 
        return"A mondat felkiáltó/felszólitó/ohajtó "
    if mondat[-1] == "?" :
        return"A mondat kérdő"
    
print(iras("Az ég kék."))
    
    
