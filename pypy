"""
#5 feladat - medium - bevasarlas.py

def bevasarlas():

    lista = [ ]
    db = 0 

    for x in range(5):
        ar = int(input("Kérem az élelmiszer árát: "))
        lista.append(ar)
    
    for x in lista:
        if x > 1000:
            db += 1
    print(f"A bevásárló listában 1000ft-nél drágább árucikk darabszáma: {db} ")

bevasarlas()

